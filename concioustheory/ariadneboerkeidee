    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Interactive CM Calculator
            const sliders = ['phi', 'gwa', 'pem', 'omega'];
            sliders.forEach(id => {
                const slider = document.getElementById(`${id}-slider`);
                const valueSpan = document.getElementById(`${id}-value`);
                slider.addEventListener('input', () => {
                    valueSpan.textContent = slider.value;
                    updateCMScore();
                });
            });

            function updateCMScore() {
                const phi = parseFloat(document.getElementById('phi-slider').value);
                const gwa = parseFloat(document.getElementById('gwa-slider').value);
                const pem = parseFloat(document.getElementById('pem-slider').value);
                const omega = parseFloat(document.getElementById('omega-slider').value);
                
                if (pem * omega > 0) {
                    const cmScore = (phi * gwa) / (pem * omega);
                    document.getElementById('cm-score').textContent = cmScore.toFixed(2);
                }
            }

            // Results Chart
            const resultsData = {
                ocean: {
                    phi: 0.82,
                    gwa: 0.76,
                    pem: 0.31,
                    omega: 0.89,
                    cm: 0.68
                },
                human: {
                    phi: 0.91,
                    gwa: 0.88,
                    pem: 0.22,
                    omega: 0.94,
                    cm: 0.85
                }
            };
            
            const ctxResults = document.getElementById('resultsChart').getContext('2d');
            new Chart(ctxResults, {
                type: 'bar',
                data: {
                    labels: ['Bewustzijnsmatrix (CM)', 'Waarnemer-onafh. (Œ©)', 'Voorspellingsfout (PEM)', 'Globale Werkruimte (GWA)', 'Ge√Øntegreerde Info (Œ¶)'],
                    datasets: [
                        {
                            label: 'De Oceaan',
                            data: [resultsData.ocean.cm, resultsData.ocean.omega, resultsData.ocean.pem, resultsData.ocean.gwa, resultsData.ocean.phi],
                            backgroundColor: 'rgba(139, 92, 246, 0.6)',
                            borderColor: 'rgba(139, 92, 246, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Menselijke Baseline',
                            data: [resultsData.human.cm, resultsData.human.omega, resultsData.human.pem, resultsData.human.gwa, resultsData.human.phi],
                            backgroundColor: 'rgba(107, 114, 128, 0.6)',
                            borderColor: 'rgba(107, 114, 128, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 1.0,
                            title: {
                                display: true,
                                text: 'Genormaliseerde Score'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false
                        }
                    }
                }
            });
            
            updateCMScore(); // Initial calculation
        });
    </script>

